{
  "name": "@themoin/diff-calculator",
  "version": "0.1.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/themoin/diff-calculator.git"
  },
  "description": "Github Action and npm CLI for comment, whitespace ignorable diff checker",
  "scripts": {
    "lint": "eslint .",
    "build:cli": "esbuild src/cli.ts --minify --bundle --platform=node --outfile=dist/cli.js --target=node20",
    "build:action": "esbuild src/action.ts --minify --bundle --platform=node --outfile=dist/action.js --target=node20",
    "build": "pnpm run build:cli && pnpm run build:action"
  },
  "files": [
    "dist/cli.js"
  ],
  "bin": {
    "calcdiff": "dist/cli.js"
  },
  "keywords": [
    "diff",
    "comment",
    "whitespace",
    "ignorable",
    "checker",
    "calculator",
    "git"
  ],
  "author": "haenah",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@eslint/js": "^9.8.0",
    "@types/node": "^22.1.0",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.23.0",
    "eslint": "9.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.0.1",
    "gitdiff-parser": "^0.3.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "yargs": "^17.7.2"
  }
}
