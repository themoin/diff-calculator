{
  "compilerOptions": {
    "target": "es2022",
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}
